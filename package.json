{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.10",
    "postcss": "^8.4.21",
    "sass": "^1.62.1",
    "tailwindcss": "^3.2.7"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules && tailwindcss -i ./app/assets/stylesheets/application.scss -o ./app/assets/builds/application.css --minify"
  },
  "devDependencies": {
    "stylelint": "13.x",
    "stylelint-config-standard": "21.x",
    "stylelint-csstree-validator": "1.x",
    "stylelint-scss": "3.x"
  }
}
