<main class="flex flex-col mx-auto my-4 px-2 sm:px-1 sm:max-w-[60rem] pb-xxxxl">
  <%= link_to sanitize("&larr; Back to quotes"), quotes_path %>
  <div class="flex justify-between gap-3 mt-4 mb-6 flex-wrap sm:mb-8">
    <h1 class="font-bold text-3xl">
      <%= @quote.name %>
    </h1>
    <%= link_to "New date",
                new_quote_line_item_date_path(@quote),
                data: { turbo_frame: dom_id(LineItemDate.new) },
                class: "py-2 px-4 text-white bg-gradient-to-r from-[#e52d27] via-[#b31217] to-[#e52d27] bg-[length:200%_auto]
                       hover:shadow-[0_0_20px_#eee] hover:text-white hover:bg-[right_center] focus:text-white active:text-white
                       rounded-[10px] transition-all duration-500" %>
  </div>
  <%= turbo_frame_tag LineItemDate.new %>
  <%= turbo_frame_tag "line_item_dates" do %>
    <%= render @line_item_dates, quote: @quote %>
  <% end %>
</main>
<%= turbo_frame_tag dom_id(@quote, :total) do %>
  <%= render "quotes/total", quote: @quote %>
<% end %>
