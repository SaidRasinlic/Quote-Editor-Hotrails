<%= simple_form_for [quote, line_item_date, line_item],
                    html: { class: "form line-item line-item--form" } do |f| %>
  <%= form_error_notification(line_item) %>
  <%= f.input :name,
              placeholder: "Name of the article",
              wrapper_html: { class: "line-item__name" },
              label_html: { class: "sr-only" },
              input_html: { autofocus: true } %>
  <%= f.input :quantity,
              placeholder: "Quantity",
              wrapper_html: { class: "line-item__quantity" },
              label_html: { class: "sr-only" } %>
  <%= f.input :unit_price,
              placeholder: "Price",
              wrapper_html: { class: "line-item__price" },
              label_html: { class: "sr-only" } %>
  <%= f.input :description,
              wrapper_html: { class: "line-item__description" },
              label_html: { class: "sr-only" } %>
  <div class="line-item__actions">
    <%= link_to quote_path(quote), class: "flex flex-col items-center justify-center px-4 py-2  hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-md" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16" id="IconChangeColor"> <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" id="mainIconPathAttribute" fill="#ff0000"></path> </svg>
    <% end %>
    <%= button_tag(type: 'submit', class: "flex flex-col items-center justify-center px-4 py-2  hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-md") do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-check-square-fill" viewBox="0 0 16 16" id="IconChangeColor"> <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z" id="mainIconPathAttribute" fill="green"></path> </svg>
    <% end %>
  </div>
<% end %>
