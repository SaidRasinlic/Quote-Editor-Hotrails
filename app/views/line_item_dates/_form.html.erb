<%= simple_form_for [quote, line_item_date], html: { class: "form line-item-date" } do |f| %>
  <% if line_item_date.errors.any? %>
    <%= form_error_notification(line_item_date) %>
  <% end %>
  <%= f.input :date, html5: true, input_html: { autofocus: true } %>
  <%= link_to "Cancel", quote_path(quote), class: "inline-block bg-origin-border bg-transparent border-2 p-1 m-2 font-bold cursor-pointer p-0 rounded-1.5
                         transition ease-in-out duration-500 text-black bg-[#00000021] hover:bg-[#00000066] border-black" %>
  <%= f.submit class: "py-2 px-4 text-white bg-gradient-to-r from-[#e52d27] via-[#b31217] to-[#e52d27] bg-[length:200%_auto]
                       hover:shadow-[0_0_20px_#eee] hover:text-white hover:bg-[right_center] focus:text-white active:text-white
                       rounded-[10px] transition-all duration-500" %>
<% end %>
